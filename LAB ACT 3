def check_number(num):
    if num > 0:
        if num % 2 == 0:
            print(f"{num} is an Even Number")
        else:
            print(f"{num} is an Odd Number")
    else:
        print("Negative Number")
        
while True:
    num = int(input("Enter Number: "))
    check_number(num)
